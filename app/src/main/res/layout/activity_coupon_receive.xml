<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/couponReceive_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="두근두근!\n쿠폰상자를 지금 열어볼까요?"
        android:textColor="#525252"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/couponReceive_couponPocketConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponReceive_text"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:text="내 쿠폰함을 확인하세요."
        android:textColor="#525252"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/couponReceive_image"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:src="@drawable/coupon_present" />

    <TextView
        android:id="@+id/couponReceive_marketName"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/couponReceive_image"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="#888888"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/couponReceive_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponReceive_marketName"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/couponReceive_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@layout/effect_round_coupon_receive_confirm"
        android:text="확인하기"
        android:textColor="#ffffff" />

</RelativeLayout>