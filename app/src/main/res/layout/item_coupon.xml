<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="162dp"    android:paddingLeft="8dp"    android:paddingRight="8dp"    android:paddingTop="8dp">    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="@layout/effect_round_coupon_card"        android:padding="1dp">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@layout/effect_round_coupon_inner_card">            <ImageView                android:id="@+id/item_coupon_image"                android:layout_width="138dp"                android:layout_height="138dp"                android:layout_marginBottom="7dp"                android:layout_marginLeft="7dp"                android:layout_marginTop="7dp"                android:adjustViewBounds="true"                android:scaleType="centerCrop"/>            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:layout_marginLeft="154dp">                <TextView                    android:id="@+id/item_coupon_marketName"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginTop="7dp"                    android:includeFontPadding="false"                    android:textColor="#888888"                    android:textSize="14sp" />                <TextView                    android:id="@+id/item_coupon_name"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:singleLine="true"                    android:layout_below="@+id/item_coupon_marketName"                    android:includeFontPadding="false"                    android:textColor="#313131"                    android:textSize="20sp" />                <TextView                    android:id="@+id/item_coupon_description"                    android:layout_width="wrap_content"                    android:singleLine="true"                    android:layout_height="wrap_content"                    android:layout_below="@+id/item_coupon_name"                    android:includeFontPadding="false"                    android:textColor="#313131"                    android:textSize="14sp" />                <TextView                    android:id="@+id/item_coupon_period"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_above="@+id/item_coupon_use"                    android:layout_marginBottom="8dp"                    android:includeFontPadding="false"                    android:textColor="#e63c3c" />                <Button                    android:id="@+id/item_coupon_use"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:background="#47c13a"                    android:layout_marginBottom="7dp"                    android:layout_marginRight="7dp"                    android:text="사용하기"                    android:textColor="#ffffff" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout>    <RelativeLayout        android:id="@+id/item_coupon_opacity"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#00ffffff"/></RelativeLayout>