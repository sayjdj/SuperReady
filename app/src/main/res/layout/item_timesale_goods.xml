<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_timeSaleGoods_layout"
    android:layout_width="match_parent"
    android:layout_height="276dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:background="@layout/effect_round"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginBottom="0.5dp">

            <ImageView
                android:id="@+id/item_timeSaleGoods_image"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_timeSaleGoods_discountRate"
                android:layout_width="75dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/item_timeSaleGoods_restTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:shadowColor="#000000"
                android:shadowDx="0.5"
                android:shadowDy="0.8"
                android:shadowRadius="5"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_timeSaleGoods_highLight"
            android:layout_width="match_parent"
            android:layout_height="75.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff">

            <TextView
                android:id="@+id/item_timeSaleGoods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_timeSaleGoods_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="30dp"
                android:textColor="#4e4e4e"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_timeSaleGoods_prePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/item_timeSaleGoods_curPrice"
                android:textColor="#4e4e4e"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/item_timeSaleGoods_curPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="12dp"
                android:textColor="#000000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/item_timesaleGoods_priceExplanation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_timeSaleGoods_curPrice"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:singleLine="true"
                android:text="슈퍼레디가"
                android:textColor="#ff1d1d" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/item_timeSaleGoods_favorite"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="162dp"
            android:background="@drawable/likecircle_withshadow" />
    </RelativeLayout>

</LinearLayout>