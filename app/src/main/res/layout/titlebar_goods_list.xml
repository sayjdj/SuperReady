<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1d1d" >

    <RelativeLayout
        android:id="@+id/titlebar_goodsList_back"
        android:layout_width="48dp"
        android:layout_height="48dp" >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/navi_btn_previous" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/titlebar_goodsList_marketLogoImage"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/titlebar_goodsList_marketLogoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/titlebar_goodsList_favorite"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_like" />
    </RelativeLayout>

</RelativeLayout>